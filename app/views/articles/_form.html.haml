= simple_form_for @article, :html => {:multipart => true} do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :title, label: 'Title', :placeholder => 'title'
  .form-group
    = f.input :description, label: 'Description', :placeholder => 'Describe your Product'
  .form-group
    = f.input :picture, label: 'Picture', :type => 'file'
  %button.btn.btn-default{:type => "submit"}
    Submit
